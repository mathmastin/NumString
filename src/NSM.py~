#Class definitions and methods for the NumString Python class
#

import itertools

#NumString() is the basic object that consists of simply a list of ints
#we also store the sum
class NumString():
    #default Digits to empty list
    def __init__(self, Digits=[]):
        self.Digits = Digits
        self.Total = sum(Digits)

    #Define string printing
    def __str__(self):
        OutString = ', '.join(str(d) for d in self.Digits)

        return OutString

    #Method to resest the total if Digits is modified
    def FixTotal(self):
        
        self.Total = sum(self.Digits)

#NumStringPile() holds all possible NumStrings of a given size
class NumStringPile():
    #Default the size to 0
    def __init__(self, Size=0):
        self.Size = Size
        self.Pile=itertools.product(range(0,Size))

    def __str__(self):
        OutString = '; '.join(str(x) for x in self.Pile)
